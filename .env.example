# LLM（質問生成などに使う。まだ使わないなら空でもOK）
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=sk-...
LLM_MODEL=gpt-4o-mini

# LLMの生出力をnotesに含める（デバッグ用）
DEBUG_LLM_RAW=0

# 話者分離（pyannote）
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
DIARIZATION_MIN_SPEAKERS=1
DIARIZATION_MAX_SPEAKERS=2
DIARIZATION_OVERLAP_SEC=1.0
DIARIZATION_MIN_SEGMENT_SEC=0.3
# 話者埋め込みでラベル統一（オン/オフや閾値調整）
SPEAKER_EMBEDDING_ENABLED=1
SPEAKER_EMBEDDING_MATCH_THRESHOLD=0.65
# SPEAKER_EMBEDDING_MODEL=speechbrain/spkrec-ecapa-voxceleb
# SPEAKER_EMBEDDING_DEVICE=cpu
HUGGINGFACE_TOKEN=hf_xxx

# ASRモデル（現在は未使用。必要になったら有効化）
# ASR_MODEL_SIZE=medium
# ASR_DEVICE=cpu
# ASR_COMPUTE_TYPE=int8
# ASR_LANGUAGE=ja
# ASR_MAX_CONCURRENCY=1

# LINEヤフー テキスト解析 API のアプリケーションID
# ※ 本物の Client ID を持っているなら、ここに貼り付ける
YAHOO_APPID= #.envには本物のキーあり
UUDB_ROOT=C:\UUDB

OPENAI_API_KEY= #.envには本物のキーあり

# /audio_chunk の最大アップロードサイズ（MB）
AUDIO_CHUNK_MAX_MB=20
